@page "/products"
@rendermode InteractiveServer
@using BlazzyMotion.Carousel.Models

<PageTitle>Product Showcase</PageTitle>

<h1>Product Showcase</h1>
<p>Using <code>ItemTemplate</code> to customize the slide content.</p>

<div style="height: 600px; margin-top: 2rem;">
    <BzCarousel Items="products" Theme="BzTheme.Light" RotateDegree="20" Depth="200">
        <ItemTemplate Context="product">
            <div class="product-card">
                <img src="@product.Image" alt="@product.Name" />
                <div class="product-info">
                    <h3>@product.Name</h3>
                    <p class="price">$@product.Price</p>
                    <button class="btn btn-primary btn-sm">Add to Cart</button>
                </div>
            </div>
        </ItemTemplate>
    </BzCarousel>
</div>

<style>
    .product-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .product-card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }
    .product-info {
        padding: 1rem;
        text-align: center;
    }
    .price {
        font-size: 1.2rem;
        font-weight: bold;
        color: #2c3e50;
        margin: 0.5rem 0;
    }
</style>

@code {
    private List<Product> products = new();

    protected override void OnInitialized()
    {
        var names = new[] { "Smart Watch", "Headphones", "Camera", "Laptop", "Tablet" };
        var prices = new[] { 199.99m, 89.99m, 599.99m, 1299.99m, 499.99m };

        for (int i = 0; i < 5; i++)
        {
            products.Add(new Product 
            { 
                Image = $"images/product-{i+1}.jpg", 
                Name = names[i],
                Price = prices[i],
                Description = "Lorem ipsum dolor sit amet."
            });
        }
    }
}
