@page "/team"
@rendermode InteractiveServer
@using BlazzyMotion.Carousel.Models

<PageTitle>Our Team</PageTitle>

<h1>Our Team</h1>
<p>Using <code>BzTheme.Minimal</code> for a clean look.</p>

<div style="height: 400px; margin-top: 2rem;">
    <BzCarousel Items="members" Theme="BzTheme.Minimal" ShowOverlay="false" />
</div>

@code {
    private List<TeamMember> members = new();

    protected override void OnInitialized()
    {
        var roles = new[] { "CEO", "CTO", "Lead Dev", "Designer", "Product Owner" };

        for (int i = 0; i < 5; i++)
        {
            members.Add(new TeamMember
            {
                Avatar = $"images/team-{i + 1}.jpg",
                Name = $"Member {i + 1}",
                Role = roles[i]
            });
        }
    }
}