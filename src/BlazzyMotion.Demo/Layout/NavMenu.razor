@using Microsoft.AspNetCore.Components.Routing

<aside class="bz-sidebar @(IsOpen ? "bz-sidebar--open" : "")">

    <!-- Logo -->
    <header class="bz-sidebar__header">
        <a href="/" class="bz-sidebar__logo" @onclick="HandleLinkClick">
            <img src="images/bm-logo.png"
                 alt="BlazzyMotion Logo"
                 class="bz-sidebar__logo-img" />
            <span class="bz-sidebar__logo-text">BlazzyMotion</span>
        </a>
    </header>

    <!-- Navigation -->
    <nav class="bz-sidebar__nav">

        <!-- GET STARTED -->
        <div class="bz-sidebar__group">
            <span class="bz-sidebar__group-title">Get Started</span>

            <NavLink href="docs/installation" class="bz-sidebar__link" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bz-sidebar__link-icon">📦</span>
                <span>Installation</span>
            </NavLink>

            <NavLink href="docs/quick-start" class="bz-sidebar__link" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bz-sidebar__link-icon">🚀</span>
                <span>Quick Start</span>
            </NavLink>
        </div>

        <!-- COMPONENTS -->
        <div class="bz-sidebar__group">
            <span class="bz-sidebar__group-title">Components</span>

            <NavLink href="/" class="bz-sidebar__link" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bz-sidebar__link-icon">🎠</span>
                <span>Carousel</span>
                <span class="bz-sidebar__link-badge">Live</span>
            </NavLink>

            <NavLink href="docs/carousel" class="bz-sidebar__link" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bz-sidebar__link-icon">📖</span>
                <span>Carousel Docs</span>
            </NavLink>

            <span class="bz-sidebar__link bz-sidebar__link--disabled">
                <span class="bz-sidebar__link-icon">🍱</span>
                <span>Bento Grid</span>
                <span class="bz-sidebar__link-badge bz-sidebar__link-badge--soon">Soon</span>
            </span>
        </div>

        <!-- THEMING -->
        <div class="bz-sidebar__group">
            <span class="bz-sidebar__group-title">Customization</span>

            <NavLink href="docs/theming" class="bz-sidebar__link" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bz-sidebar__link-icon">🎨</span>
                <span>Theming</span>
            </NavLink>

            <NavLink href="docs/css-variables" class="bz-sidebar__link" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bz-sidebar__link-icon">⚙️</span>
                <span>CSS Variables</span>
            </NavLink>
        </div>

        <!-- API -->
        <div class="bz-sidebar__group">
            <span class="bz-sidebar__group-title">Reference</span>

            <NavLink href="docs/api" class="bz-sidebar__link" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bz-sidebar__link-icon">📋</span>
                <span>API Reference</span>
            </NavLink>

            <NavLink href="docs/examples" class="bz-sidebar__link" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bz-sidebar__link-icon">💡</span>
                <span>Examples</span>
            </NavLink>
        </div>

    </nav>

    <!-- Footer -->
    <footer class="bz-sidebar__footer">

        <div class="bz-sidebar__version">
            <span class="bz-badge bz-badge--purple">v1.1.0</span>
            <span class="bz-badge">.NET 8</span>
        </div>

        <div class="bz-sidebar__external">
            <a href="https://github.com/Blazzy-Motion/BlazzyMotion"
               target="_blank"
               rel="noopener noreferrer"
               class="bz-sidebar__external-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
                <span>GitHub</span>
            </a>

            <a href="https://www.nuget.org/packages/BlazzyMotion.Carousel"
               target="_blank"
               rel="noopener noreferrer"
               class="bz-sidebar__external-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0L1.75 6v12L12 24l10.25-6V6L12 0zm-1.775 18a3.225 3.225 0 110-6.45 3.225 3.225 0 010 6.45zm8.55-7.425a2.025 2.025 0 110-4.05 2.025 2.025 0 010 4.05z" />
                </svg>
                <span>NuGet</span>
            </a>
        </div>
    </footer>

</aside>

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback OnLinkClick { get; set; }

    private async Task HandleLinkClick()
    {
        await OnLinkClick.InvokeAsync();
    }
}