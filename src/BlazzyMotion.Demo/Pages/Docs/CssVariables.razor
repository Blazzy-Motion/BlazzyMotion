@page "/docs/css-variables"
@using BlazzyMotion.Demo.Services
@using BlazzyMotion.Demo.Icons

<PageTitle>CSS Variables - BlazzyMotion</PageTitle>

<PageHeader Title="CSS Variables" Subtitle="Customize BlazzyMotion components using CSS custom properties"
  Framework="@AppVersions.DotNetVersion">
  <IconContent>@Icons.Settings</IconContent>
</PageHeader>

<DocSection Title="Overview">
  <IconContent>@Icons.BookOpen</IconContent>
  <ChildContent>
    <p>BlazzyMotion uses CSS custom properties for easy customization. Variables use prefixes:</p>
    <ul class="bz-feature-list">
      <li><code>--bz-*</code> - Shared/Core variables (themes, colors)</li>
      <li><code>--bzc-*</code> - Carousel-specific variables</li>
      <li><code>--bzb-*</code> - Bento-specific variables</li>
    </ul>
    <CodeBlock Language="css" Code="@_overviewExample" />
  </ChildContent>
</DocSection>

<DocSection Title="Shared Theme Variables">
  <IconContent>@Icons.Palette</IconContent>
  <ChildContent>
    <p>These variables apply to all components:</p>
    <ApiTable Parameters="@_sharedVariables" />
  </ChildContent>
</DocSection>

<DocSection Title="Carousel Variables">
  <IconContent>@Icons.Carousel</IconContent>
  <ChildContent>
    <h4>Dimensions</h4>
    <ApiTable Parameters="@_carouselDimensions" />

    <h4 class="bz-mt-3">Effects</h4>
    <ApiTable Parameters="@_carouselEffects" />

    <h4 class="bz-mt-3">Example</h4>
    <CodeBlock Language="css" Code="@_carouselExample" />
  </ChildContent>
</DocSection>

<DocSection Title="Bento Variables">
  <IconContent>@Icons.BentoGrid</IconContent>
  <ChildContent>
    <h4>Grid Layout</h4>
    <ApiTable Parameters="@_bentoGrid" />

    <h4 class="bz-mt-3">Item Styling</h4>
    <ApiTable Parameters="@_bentoItems" />

    <h4 class="bz-mt-3">Metric Component</h4>
    <ApiTable Parameters="@_bentoMetric" />

    <h4 class="bz-mt-3">Example</h4>
    <CodeBlock Language="css" Code="@_bentoExample" />
  </ChildContent>
</DocSection>

<DocSection Title="How to Override">
  <IconContent>@Icons.Target</IconContent>
  <ChildContent>
    <h4>Method 1: Global Override</h4>
    <CodeBlock Language="css" Code="@_globalOverride" />

    <h4 class="bz-mt-3">Method 2: Scoped Override</h4>
    <CodeBlock Language="css" Code="@_scopedOverride" />

    <h4 class="bz-mt-3">Method 3: Component CssClass</h4>
    <CodeBlock Language="razor" Code="@_cssClassOverride" />
  </ChildContent>
</DocSection>

<DocSection Title="Responsive Breakpoints">
  <IconContent>@Icons.Smartphone</IconContent>
  <ChildContent>
    <ApiTable Parameters="@_breakpoints" />
    <p class="bz-mt-2">Variables automatically adjust at breakpoints. Override as needed:</p>
    <CodeBlock Language="css" Code="@_responsiveExample" />
  </ChildContent>
</DocSection>

<DocSection Title="Complete Reference">
  <IconContent>@Icons.Library</IconContent>
  <ChildContent>
    <h4>All Carousel Variables</h4>
    <CodeBlock Language="css" Code="@_carouselReference" />

    <h4 class="bz-mt-3">All Bento Variables</h4>
    <CodeBlock Language="css" Code="@_bentoReference" />
  </ChildContent>
</DocSection>

