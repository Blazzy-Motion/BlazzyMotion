    <ApiTable Parameters="@_galleryList" />

    <h4 class="bz-mt-3">Example</h4>
    <CodeBlock Language="css" Code="@_galleryExample" />
  </ChildContent>
</DocSection>

<DocSection Title="How to Override">
  <IconContent>@Icons.Target</IconContent>
  <ChildContent>
    <h4>Method 1: Global Override</h4>
    <CodeBlock Language="css" Code="@_globalOverride" />

    <h4 class="bz-mt-3">Method 2: Scoped Override</h4>
    <CodeBlock Language="css" Code="@_scopedOverride" />

    <h4 class="bz-mt-3">Method 3: Component CssClass</h4>
    <CodeBlock Language="razor" Code="@_cssClassOverride" />
  </ChildContent>
</DocSection>

<DocSection Title="Responsive Breakpoints">
  <IconContent>@Icons.Smartphone</IconContent>
  <ChildContent>
    <ApiTable Parameters="@_breakpoints" />
    <p class="bz-mt-2">Variables automatically adjust at breakpoints. Override as needed:</p>
    <CodeBlock Language="css" Code="@_responsiveExample" />
  </ChildContent>
</DocSection>

<DocSection Title="Complete Reference">
  <IconContent>@Icons.Library</IconContent>
  <ChildContent>
    <h4>All Carousel Variables</h4>
    <CodeBlock Language="css" Code="@_carouselReference" />

