@page "/docs/carousel"
@using BlazzyMotion.Demo.Services
@using BlazzyMotion.Demo.Icons

<PageTitle>Carousel Documentation - BlazzyMotion</PageTitle>

<PageHeader Title="BzCarousel" Subtitle="A modern, high-performance 3D carousel component" Version="@AppVersions.Carousel"
    License="MIT" Framework="@AppVersions.DotNetVersion">
    <IconContent>@Icons.Carousel</IconContent>
</PageHeader>

<DocSection Title="Overview">
    <IconContent>@Icons.BookOpen</IconContent>
    <ChildContent>
        <p><code>BzCarousel</code> is a feature-rich carousel component powered by Swiper.js.</p>

        <ul class="bz-feature-list">
            <li><strong>Zero Configuration</strong> - Source Generators handle template creation</li>
            <li><strong>3D Coverflow Effect</strong> - Stunning visual presentation</li>
            <li><strong>4 Themes</strong> - Glass, Dark, Light, and Minimal</li>
            <li><strong>Responsive</strong> - Adapts to all screen sizes</li>
        </ul>
    </ChildContent>
</DocSection>

<DocSection Title="Basic Usage">
    <IconContent>@Icons.Code</IconContent>
    <ChildContent>
        <CodeBlock Language="razor" Code="@_basicUsage" />
    </ChildContent>
</DocSection>

<DocSection Title="API Reference">
    <IconContent>@Icons.Code</IconContent>
    <ChildContent>
        <h4>Data Parameters</h4>
        <ApiTable Parameters="@_dataParams" />

        <h4 class="bz-mt-3">Appearance Parameters</h4>
        <ApiTable Parameters="@_appearanceParams" />

        <h4 class="bz-mt-3">Behavior Parameters</h4>
        <ApiTable Parameters="@_behaviorParams" />
    </ChildContent>
</DocSection>

<DocSection Title="Custom Item Template">
    <IconContent>@Icons.Palette</IconContent>
    <ChildContent>
        <CodeBlock Language="razor" Code="@_customTemplate" />
    </ChildContent>
</DocSection>

<DocSection Title="Sizing">
    <IconContent>@Icons.Layout</IconContent>
    <ChildContent>
        <p>Control carousel dimensions with <code>Width</code> and <code>Height</code> parameters.</p>
        <p>Numeric values are treated as pixels. CSS units (%, rem, vh, vw) are supported.</p>
        <CodeBlock Language="razor" Code="@_sizingExample" />
    </ChildContent>
</DocSection>

<DocSection Title="CSS Customization">
    <IconContent>@Icons.Pen</IconContent>
    <ChildContent>
        <CodeBlock Language="css" Code="@_cssVars" />
    </ChildContent>
</DocSection>

@code {
    private string _basicUsage = @"<BzCarousel Items=""@_movies""
            OnItemSelected=""HandleSelection"" />";

    private string _customTemplate = @"<BzCarousel Items=""@_products"">
    <ItemTemplate Context=""product"">
        <div class=""custom-slide"">
            <img src=""@product.Image"" alt=""@product.Name"" />
            <h3>@product.Name</h3>
            <p>$@product.Price</p>
        </div>
    </ItemTemplate>
</BzCarousel>";

    private string _sizingExample = @"<!-- Fixed pixel dimensions -->
<BzCarousel Items=""@_movies"" Width=""500"" Height=""300"" />

<!-- Percentage width -->
<BzCarousel Items=""@_movies"" Width=""80%"" Height=""350"" />

<!-- Viewport-relative height -->
<BzCarousel Items=""@_movies"" Height=""50vh"" />";

    private string _cssVars = @".my-carousel {
    --bzc-slide-width: 250px;
    --bzc-hover-scale: 1.08;
    --bzc-glass-blur: 20px;
}";

    private List<ApiTable.ApiParameter> _dataParams = new()
{
new() { Name = "Items", Type = "IEnumerable<TItem>", Description = "Collection of items", Required = true },
new() { Name = "ItemTemplate", Type = "RenderFragment<TItem>?", Default = "null", Description = "Custom template" },
new() { Name = "OnItemSelected", Type = "EventCallback<TItem>", Description = "Click callback" }
};

    private List<ApiTable.ApiParameter> _appearanceParams = new()
{
new() { Name = "Theme", Type = "BzTheme", Default = "Glass", Description = "Visual theme" },
new() { Name = "ShowOverlay", Type = "bool", Default = "true", Description = "Show gradient overlay" },
new() { Name = "CssClass", Type = "string?", Default = "null", Description = "Additional CSS classes" },
new() { Name = "Width", Type = "string?", Default = "null", Description = "Max width (e.g., \"500\" for 500px, or \"80%\")" },
new() { Name = "Height", Type = "string?", Default = "null", Description = "Height (e.g., \"300\" for 300px, or \"50vh\")" }
};

    private List<ApiTable.ApiParameter> _behaviorParams = new()
{
new() { Name = "Loop", Type = "bool", Default = "true", Description = "Infinite loop" },
new() { Name = "InitialSlide", Type = "int", Default = "0", Description = "Initial slide index" },
new() { Name = "RotateDegree", Type = "int", Default = "50", Description = "Coverflow rotation" },
new() { Name = "Depth", Type = "int", Default = "150", Description = "Coverflow depth" }
};
}
