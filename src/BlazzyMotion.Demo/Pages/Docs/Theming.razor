@page "/docs/theming"
@using BlazzyMotion.Demo.Icons

<PageTitle>Theming - BlazzyMotion</PageTitle>

<PageHeader Title="Theming"
            Subtitle="Customize the look and feel of BlazzyMotion components">
    <IconContent>@Icons.Palette</IconContent>
</PageHeader>

<DocSection Title="Built-in Themes">
    <IconContent>@Icons.Masks</IconContent>
    <ChildContent>
        <p>All BlazzyMotion components share the same 4 themes for a consistent look:</p>

        <div class="bz-theme-grid">
            <div class="bz-theme-card bz-theme-card--glass">
                <div class="bz-theme-card__preview"></div>
                <h4>Glass</h4>
                <p>Glassmorphism with backdrop blur</p>
                <code>BzTheme.Glass</code>
            </div>

            <div class="bz-theme-card bz-theme-card--dark">
                <div class="bz-theme-card__preview"></div>
                <h4>Dark</h4>
                <p>Solid dark gradient with glow</p>
                <code>BzTheme.Dark</code>
            </div>

            <div class="bz-theme-card bz-theme-card--light">
                <div class="bz-theme-card__preview"></div>
                <h4>Light</h4>
                <p>Clean light theme</p>
                <code>BzTheme.Light</code>
            </div>

            <div class="bz-theme-card bz-theme-card--minimal">
                <div class="bz-theme-card__preview"></div>
                <h4>Minimal</h4>
                <p>No background container</p>
                <code>BzTheme.Minimal</code>
            </div>
        </div>
    </ChildContent>
</DocSection>

<DocSection Title="Using Themes">
    <IconContent>@Icons.Lightbulb</IconContent>
    <ChildContent>
        <p>Apply themes using the <code>Theme</code> parameter:</p>

        <h4>BzCarousel</h4>
        <CodeBlock Language="razor" Code="@_carouselUsage" />

        <h4 class="bz-mt-3">BzBento</h4>
        <CodeBlock Language="razor" Code="@_bentoUsage" />

        <h4 class="bz-mt-3">BzGallery</h4>
        <CodeBlock Language="razor" Code="@_galleryUsage" />

        <p class="bz-mt-2">
            <strong>Tip:</strong> When nesting components (e.g., BzCarousel inside BzBento),
            use the same theme for visual consistency.
        </p>
    </ChildContent>
</DocSection>

<DocSection Title="Theme CSS Variables">
    <IconContent>@Icons.Settings</IconContent>
    <ChildContent>
        <p>Each theme defines these core variables:</p>

        <h4>Glass Theme</h4>
        <CodeBlock Language="css" Code="@_glassVars" />

        <h4 class="bz-mt-3">Dark Theme</h4>
        <CodeBlock Language="css" Code="@_darkVars" />

        <h4 class="bz-mt-3">Light Theme</h4>
        <CodeBlock Language="css" Code="@_lightVars" />
    </ChildContent>
</DocSection>

<DocSection Title="Creating a Custom Theme">
    <IconContent>@Icons.Pen</IconContent>
    <ChildContent>
        <p>Create custom themes by overriding CSS variables:</p>

        <h4>Neon Theme Example</h4>
        <CodeBlock Language="css" Code="@_customTheme" />

        <h4 class="bz-mt-3">Apply with CssClass</h4>
        <CodeBlock Language="razor" Code="@_customUsage" />
    </ChildContent>
</DocSection>

@code {
    private string _carouselUsage = @"<BzCarousel Items=""@movies"" Theme=""BzTheme.Glass"" />
<BzCarousel Items=""@movies"" Theme=""BzTheme.Dark"" />
<BzCarousel Items=""@movies"" Theme=""BzTheme.Light"" />
<BzCarousel Items=""@movies"" Theme=""BzTheme.Minimal"" />";

    private string _bentoUsage = @"<BzBento TItem=""object"" Theme=""BzTheme.Glass"" Columns=""4"">
    <BzBentoMetric Value=""1,234"" Label=""Users"" />
    <BzBentoCard Image=""hero.jpg"" Title=""Featured"" ColSpan=""2"" />
</BzBento>";

    private string _glassVars = @":root {
    --bz-theme-glass-bg: rgba(15, 15, 15, 0.6);
    --bz-theme-glass-border: rgba(255, 255, 255, 0.15);
    --bz-theme-glass-blur: 12px;
    --bz-theme-glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}";

    private string _darkVars = @":root {
    --bz-theme-dark-bg: linear-gradient(135deg, rgba(20, 20, 25, 0.98), rgba(30, 30, 40, 0.98));
    --bz-theme-dark-border: rgba(255, 255, 255, 0.08);
    --bz-theme-dark-shadow: 0 10px 40px rgba(0, 0, 0, 0.6);
    --bz-theme-dark-glow: 0 0 30px rgba(100, 100, 255, 0.15);
}";

    private string _lightVars = @":root {
    --bz-theme-light-bg: rgba(255, 255, 255, 0.98);
    --bz-theme-light-border: rgba(0, 0, 0, 0.12);
    --bz-theme-light-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
}";

    private string _customTheme = @".theme-neon {
    --bz-theme-glass-bg: rgba(0, 0, 0, 0.9);
    --bz-theme-glass-border: rgba(0, 255, 255, 0.4);
    --bz-theme-glass-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
}

.theme-neon .bzb-metric-value,
.theme-neon .bzb-feature-label {
    color: #00ffff;
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
}";

    private string _galleryUsage = @"<BzGallery Items=""@photos"" Theme=""BzTheme.Glass"" />
<BzGallery Items=""@photos"" Theme=""BzTheme.Dark"" />
<BzGallery Items=""@photos"" Theme=""BzTheme.Light"" />
<BzGallery Items=""@photos"" Theme=""BzTheme.Minimal"" />";

    private string _customUsage = @"<!-- Carousel with custom theme -->
<BzCarousel Items=""@items"" Theme=""BzTheme.Glass"" CssClass=""theme-neon"" />

<!-- Bento with custom theme -->
<BzBento TItem=""object"" Theme=""BzTheme.Glass"" CssClass=""theme-neon"">
    <BzBentoMetric Value=""99.9%"" Label=""Uptime"" />
</BzBento>

<!-- Gallery with custom theme -->
<BzGallery Items=""@photos"" Theme=""BzTheme.Glass"" CssClass=""theme-neon"" />";
}
