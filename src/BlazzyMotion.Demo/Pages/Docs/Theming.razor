@page "/docs/theming"

<PageTitle>Theming - BlazzyMotion</PageTitle>

<PageHeader Title="Theming"
            Icon="🎨"
            Subtitle="Customize the look and feel of BlazzyMotion components" />

<DocSection Title="Built-in Themes" Icon="🎭">
    <p>BlazzyMotion includes 4 professionally designed themes:</p>

    <div class="bz-theme-grid">
        <div class="bz-theme-card bz-theme-card--glass">
            <div class="bz-theme-card__preview"></div>
            <h4>Glass</h4>
            <p>Glassmorphism with backdrop blur</p>
            <code>BzTheme.Glass</code>
        </div>

        <div class="bz-theme-card bz-theme-card--dark">
            <div class="bz-theme-card__preview"></div>
            <h4>Dark</h4>
            <p>Solid dark gradient with glow</p>
            <code>BzTheme.Dark</code>
        </div>

        <div class="bz-theme-card bz-theme-card--light">
            <div class="bz-theme-card__preview"></div>
            <h4>Light</h4>
            <p>Clean light theme</p>
            <code>BzTheme.Light</code>
        </div>

        <div class="bz-theme-card bz-theme-card--minimal">
            <div class="bz-theme-card__preview"></div>
            <h4>Minimal</h4>
            <p>No background container</p>
            <code>BzTheme.Minimal</code>
        </div>
    </div>
</DocSection>

<DocSection Title="Using Themes" Icon="💡">
    <CodeBlock Language="razor" Code="@_usageCode" />
</DocSection>

<DocSection Title="CSS Variables" Icon="⚙️">
    <h4>Glass Theme Variables</h4>
    <CodeBlock Language="css" Code="@_glassVars" />
</DocSection>

<DocSection Title="Creating a Custom Theme" Icon="🖌️">
    <CodeBlock Language="css" Code="@_customTheme" />

    <p class="bz-mt-2">Apply with <code>CssClass</code>:</p>
    <CodeBlock Language="razor" Code="@_customUsage" />
</DocSection>

@code {
    private string _usageCode = @"<BzCarousel Items=""@items"" Theme=""BzTheme.Glass"" />
<BzCarousel Items=""@items"" Theme=""BzTheme.Dark"" />
<BzCarousel Items=""@items"" Theme=""BzTheme.Light"" />
<BzCarousel Items=""@items"" Theme=""BzTheme.Minimal"" />";

    private string _glassVars = @":root {
    --bzc-glass-bg: rgba(15, 15, 15, 0.6);
    --bzc-glass-border: rgba(255, 255, 255, 0.15);
    --bzc-glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    --bzc-glass-blur: 12px;
}";

    private string _customTheme = @".carousel-neon .bzc-carousel-box {
    --bzc-glass-bg: rgba(0, 0, 0, 0.8);
    --bzc-glass-border: rgba(0, 255, 255, 0.3);
    --bzc-glass-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
}";

    private string _customUsage = @"<BzCarousel Items=""@items""
             Theme=""BzTheme.Glass""
             CssClass=""carousel-neon"" />";
}