@code {
    private string _step1Code = @"using BlazzyMotion.Core.Attributes;

public class Movie
{
    [BzImage]
    public string Poster { get; set; } = """";

    [BzTitle]
    public string Title { get; set; } = """";
}";

    private string _step2Code = @"@page ""/movies""

<BzCarousel Items=""@_movies"" />

@code {
    private List<Movie> _movies = new()
    {
        new Movie { Poster = ""/images/inception.jpg"", Title = ""Inception"" },
        new Movie { Poster = ""/images/interstellar.jpg"", Title = ""Interstellar"" }
    };
}";

    private string _themeCode = @"<BzCarousel Items=""@movies"" Theme=""BzTheme.Glass"" />
<BzCarousel Items=""@movies"" Theme=""BzTheme.Dark"" />
<BzCarousel Items=""@movies"" Theme=""BzTheme.Light"" />
<BzCarousel Items=""@movies"" Theme=""BzTheme.Minimal"" />";

    private string _selectionCode = @"<BzCarousel Items=""@_movies"" OnItemSelected=""HandleClick"" />

@code {
    private void HandleClick(Movie movie)
    {
        Console.WriteLine($""Selected: {movie.Title}"");
    }
}";
}