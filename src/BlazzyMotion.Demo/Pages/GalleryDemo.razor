@page "/gallery"
@layout HomeLayout
@using BlazzyMotion.Core.Models
@using BlazzyMotion.Demo.Model
@using BlazzyMotion.Demo.Components

<PageTitle>BzGallery Demo - BlazzyMotion</PageTitle>

<div class="bz-home">

    <section class="bz-hero" style="min-height: auto; padding: 60px 20px;">
        <div class="bz-hero__content">
            <h1 class="bz-hero__brand">BzGallery</h1>
            <h2 class="bz-hero__title">Stunning Image Galleries</h2>
            <p class="bz-hero__subtitle">
                Grid, Masonry and List layouts with lightbox, filtering and staggered animations.
            </p>
            <BzInstallBox PackageName="BlazzyMotion.Gallery" />
            <div class="bz-hero__actions">
                <a href="/docs/gallery" class="bz-btn bz-btn--primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                    </svg>
                    Get Started
                </a>
                <a href="https://github.com/Blazzy-Motion/BlazzyMotion" target="_blank" rel="noopener noreferrer" class="bz-btn bz-btn--secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    Star on GitHub
                </a>
            </div>
        </div>
    </section>

    <section class="bzb-presentation">

        <span class="bzb-presentation__label">Interactive Demo</span>

        <h3 class="bzb-presentation__title">Explore All Layouts</h3>
        <p style="color: rgba(255,255,255,0.7); text-align: center; margin-bottom: 24px;">
            Change layout, theme, columns and more â€” all in real-time
        </p>

        <BzThemePicker @bind-CurrentTheme="_currentTheme" />

        <div class="bzg-demo-controls">
            <div class="bzg-demo-control">
                <label>Layout</label>
                <div class="bzg-demo-pills">
                    <button class="bzg-demo-pill @(_layout == BzGalleryLayout.Grid ? "active" : "")"
                            @onclick="@(() => _layout = BzGalleryLayout.Grid)">Grid</button>
                    <button class="bzg-demo-pill bzg-demo-pill--masonry @(_layout == BzGalleryLayout.Masonry ? "active" : "")"
                            @onclick="@(() => _layout = BzGalleryLayout.Masonry)">Masonry</button>
                    <button class="bzg-demo-pill @(_layout == BzGalleryLayout.List ? "active" : "")"
                            @onclick="@(() => _layout = BzGalleryLayout.List)">List</button>
                </div>
            </div>

            <div class="bzg-demo-control">
                <label>Columns: @_columns</label>
                <input type="range" min="1" max="5" @bind="_columns" @bind:event="oninput" />
            </div>

            <div class="bzg-demo-control">
                <label>Gap: @(_gap)px</label>
                <input type="range" min="4" max="32" step="4" @bind="_gap" @bind:event="oninput" />
            </div>

            @if (_layout == BzGalleryLayout.Grid)
            {
                <div class="bzg-demo-control">
                    <label>Aspect Ratio</label>
                    <div class="bzg-demo-pills">
                        <button class="bzg-demo-pill @(_aspectRatio == "1/1" ? "active" : "")"
                                @onclick="@(() => _aspectRatio = "1/1")">1:1</button>
                        <button class="bzg-demo-pill @(_aspectRatio == "4/3" ? "active" : "")"
                                @onclick="@(() => _aspectRatio = "4/3")">4:3</button>
                        <button class="bzg-demo-pill @(_aspectRatio == "16/9" ? "active" : "")"
                                @onclick="@(() => _aspectRatio = "16/9")">16:9</button>
                        <button class="bzg-demo-pill @(_aspectRatio == "3/4" ? "active" : "")"
                                @onclick="@(() => _aspectRatio = "3/4")">3:4</button>
                    </div>
                </div>
            }

            <div class="bzg-demo-control">
                <label>Lightbox</label>
                <div class="bzg-demo-pills">
                    <button class="bzg-demo-pill @(_enableLightbox ? "active" : "")"
                            @onclick="@(() => _enableLightbox = true)">On</button>
                    <button class="bzg-demo-pill @(!_enableLightbox ? "active" : "")"
                            @onclick="@(() => _enableLightbox = false)">Off</button>
                </div>
            </div>

            <div class="bzg-demo-control">
                <label>Filter</label>
                <div class="bzg-demo-pills">
                    <button class="bzg-demo-pill @(_enableFilter ? "active" : "")"
                            @onclick="@(() => _enableFilter = true)">On</button>
                    <button class="bzg-demo-pill @(!_enableFilter ? "active" : "")"
                            @onclick="@(() => _enableFilter = false)">Off</button>
                </div>
            </div>
        </div>

        <div class="bzb-presentation__stage">
            <BzGallery TItem="GalleryPhoto"
                       Items="@_photos"
                       Layout="@_layout"
                       Theme="@_currentTheme"
                       Columns="@_columns"
                       Gap="@_gap"
                       AspectRatio="@_aspectRatio"
                       EnableLightbox="@_enableLightbox"
                       EnableFilter="@_enableFilter"
                       CategorySelector="@(p => p.Category)"
                       OnItemSelected="@OnPhotoSelected"
                       CssClass="bzg-demo-gallery" />
        </div>

        @if (!_enableLightbox && _selectedPhoto != null)
        {
            <h4 class="bz-selected-title">Selected: @_selectedPhoto.Title</h4>
        }

    </section>

</div>

@code {
    private BzTheme _currentTheme = BzTheme.Glass;
    private BzGalleryLayout _layout = BzGalleryLayout.Grid;
    private int _columns = 3;
    private int _gap = 16;
    private string _aspectRatio = "4/3";
    private bool _enableLightbox = true;
    private bool _enableFilter = true;
    private GalleryPhoto? _selectedPhoto;

    private List<GalleryPhoto> _photos = new()
    {
        new() { Title = "Mountain Lake Reflection", Description = "Crystal clear waters mirroring the peaks", Category = "Nature", ImageUrl = "images/gallery/mountain-lake-reflection.webp" },
        new() { Title = "City Sunset Avenue", Description = "Golden hour lighting a bustling street", Category = "Urban", ImageUrl = "images/gallery/city-sunset-avenue.webp" },
        new() { Title = "Foggy Woods", Description = "Mist weaving through ancient treetops", Category = "Nature", ImageUrl = "images/gallery/foggy-woods-top.webp" },
        new() { Title = "Foggy Sunset Landscape", Description = "Warm light fading into evening mist", Category = "Nature", ImageUrl = "images/gallery/foggy-sunset-landscape.webp" },
        new() { Title = "Rainy Cobblestone Street", Description = "Glistening stones under city lights", Category = "Urban", ImageUrl = "images/gallery/rainy-cobblestone-street.webp" },
        new() { Title = "Mountain Lake Pier", Description = "Peaceful dock on a mountain lake", Category = "Nature", ImageUrl = "images/gallery/mountain-lake-pier.webp" },
        new() { Title = "Abandoned Industrial Hall", Description = "Weathered architecture with raw character", Category = "Urban", ImageUrl = "images/gallery/abandoned-industrial-hall.webp" },
        new() { Title = "Looking Up Trees", Description = "Sunlight filtering through a forest canopy", Category = "Nature", ImageUrl = "images/gallery/looking-up-trees.webp" },
        new() { Title = "Yellow Wall Bicycle", Description = "Vibrant colors in an urban corner", Category = "Urban", ImageUrl = "images/gallery/yellow-wall-bicycle.webp" }
    };

    private void OnPhotoSelected(GalleryPhoto photo)
    {
        _selectedPhoto = photo;
    }
}
