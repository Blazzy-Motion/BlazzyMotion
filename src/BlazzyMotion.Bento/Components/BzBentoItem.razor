@namespace BlazzyMotion.Bento.Components
@inherits BlazzyMotion.Bento.Abstractions.BzBentoItemBase

<div class="@GetCombinedClass("")" style="@GetItemStyle()" @onclick="HandleClick" @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {
    /// <summary>
    /// Content to render inside the Bento item.
    /// Use for custom content that doesn't fit other helper components.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}