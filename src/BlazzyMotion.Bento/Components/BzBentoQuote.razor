@namespace BlazzyMotion.Bento.Components
@typeparam TItem where TItem : class
@inherits BlazzyMotion.Bento.Abstractions.BzBentoItemBase

<div class="@GetCombinedClass("bzb-quote")"  style="@GetItemStyle()"    @onclick="HandleClick"
     @attributes="AdditionalAttributes">

  @if (HasText)
  {
    <blockquote class="bzb-quote-text">
      "@GetText()"
    </blockquote>
  }

  @if (HasAuthorInfo)
  {
    <div class="bzb-quote-author">
      @if (HasAvatar)
      {
        <img src="@GetAvatar()" class="bzb-quote-avatar"      alt="@GetAuthor()"            loading="lazy" />
      }

      <div class="bzb-quote-info">
        @if (HasAuthor)
        {
          <span class="bzb-quote-name">@GetAuthor()</span>
        }
        @if (HasRole)
        {
          <span class="bzb-quote-role">@Role</span>
        }
      </div>
    </div>
  }
</div>